{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["jobs.json"]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/json-server"
    }
  ],
  "functions": {
    "api/json-server.js": {
      "memory": 512,
      "maxDuration": 10
    }
  }
}